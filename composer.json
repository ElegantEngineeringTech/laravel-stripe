{
    "name": "finller/laravel-stripe",
    "description": "Stripe and Stripe Connect for your Laravel App",
    "keywords": [
        "Finller",
        "laravel",
        "laravel-stripe"
    ],
    "homepage": "https://github.com/finller/laravel-stripe",
    "license": "MIT",
    "authors": [
        {
            "name": "Quentin Gabriele",
            "email": "quentin.gabriele@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-stripe-webhooks": "^3.7",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^8.8|^9.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Finller\\Stripe\\": "src/",
            "Finller\\Stripe\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Finller\\Stripe\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-stripe --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Finller\\Stripe\\StripeServiceProvider"
            ],
            "aliases": {
                "Stripe": "Finller\\Stripe\\Facades\\Stripe"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
